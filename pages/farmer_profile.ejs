<%- include("../partials/farmer_nav") %>
<div class="app-root">
  <!-- CONTENT -->
  <main class="profile-container">
    <h2 class="page-title">PROFILE</h2>

    <!-- VIEW PROFILE -->
    <section id="viewProfile" class="profile-card">
      <div class="profile-avatar" id="avatarPreview">
        <i class="fa-solid fa-user"></i>
      </div>

      <h3>Juan Dela Cruz</h3>
      <p class="role">Pig Farmer</p>

      <div class="info-row"><span>Phone</span><strong>+63 912 345 6789</strong></div>
      <div class="info-row"><span>Email</span><strong>juan@email.com</strong></div>
      <div class="info-row"><span>Address</span><strong>Buenavista, Agusan del Norte</strong></div>
      <div class="info-row"><span>Farm Name</span><strong>Juan’s Pig Farm</strong></div>

      <button class="edit-btn" id="editProfileBtn">
        <i class="fa-solid fa-pen"></i> EDIT PROFILE
      </button>
    </section>

    <!-- EDIT PROFILE -->
    <section id="editProfile" class="profile-card hidden">
      <h4>Edit Profile</h4>

      <!-- PROFILE IMAGE -->
      <label>Profile Picture</label>
      <div class="avatar-upload">
        <input type="file" id="avatarInput" accept="image/*" hidden />
        <div class="avatar-preview" id="avatarEditPreview">
          <i class="fa-solid fa-user"></i>
        </div>
        <button type="button" id="changeAvatarBtn">Change</button>
      </div>

      <label>Name</label>
      <input type="text" value="Juan Dela Cruz" />

      <label>Phone</label>
      <input type="text" value="+63 912 345 6789" />

      <label>Email</label>
      <input type="email" value="juan@email.com" />

      <label>Address</label>
      <input type="text" value="Buenavista, Agusan del Norte" />

      <label>Farm Name</label>
      <input type="text" value="Juan’s Pig Farm" />

      <div class="actions">
        <button class="cancel-btn" id="cancelEdit">CANCEL</button>
        <button class="save-btn">SAVE</button>
      </div>
    </section>
  </main>
</div>
<%- include("../partials/farmer_footer") %>
