<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<%- include("../partials/sidepanel") %>

<main class="main-content">
  <div class="container-fluid">

    <!-- Header card with tabs -->
    <%- include("../partials/pigmanagement_panel") %>

    <div class="row g-3">

      <!-- LEFT column -->
      <div class="col-lg-4">

        <!-- Left Filters -->
        <div class="card page-card mb-3">
          <div class="card-body">
            <form id="leftFilters" class="row g-2" role="search" aria-label="Left filters">

              <div class="col-6">
                <label for="left-location" class="visually-hidden">Location</label>
                <select id="left-location" name="location" class="form-select form-select-sm">
                  <option value="">Location</option>
                </select>
              </div>

              <div class="col-6">
                <label for="left-status" class="visually-hidden">Status</label>
                <select id="left-status" name="status" class="form-select form-select-sm">
                  <option value="">Status</option>
                </select>
              </div>

              <div class="col-6">
                <label for="left-concerns" class="visually-hidden">Concerns</label>
                <select id="left-concerns" name="concerns" class="form-select form-select-sm">
                  <option value="">Concerns</option>
                </select>
              </div>

              <div class="col-6">
                <label for="left-search-name" class="visually-hidden">Search by name</label>
                <input id="left-search-name" name="search_name" type="text"
                       class="form-control form-control-sm" placeholder="Search by name" />
              </div>

              <div class="col-12 text-end">
                <button type="submit" class="btn btn-success btn-sm search-btn">Search</button>
              </div>

            </form>
          </div>
        </div>

        <!-- Farmer card -->
        <div class="card page-card mb-3">
          <div class="card-body d-flex gap-3 align-items-start">

            <div class="farmer-avatar" aria-hidden="true">
              <i class="fa-regular fa-user fa-2x"></i>
            </div>

            <div class="farmer-meta flex-grow-1">
              <table class="farmer-table">
                <tbody>
                  <tr>
                    <td class="label">NAME</td>
                    <td>Juan Dela Cruz</td>
                  </tr>
                  <tr>
                    <td class="label">LOCATION</td>
                    <td>Barangay Tiguion, Torrijos, Marinduque</td>
                  </tr>
                  <tr>
                    <td class="label">HANDLED</td>
                    <td>E-0001</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div class="farmer-actions">
              <button type="button" class="btn btn-outline-primary btn-sm">VIEW</button>
            </div>

          </div>
        </div>

        <!-- Placeholder boxes -->
        <div class="card page-card mb-3">
          <div class="card-body">
            <div class="placeholder-rect" aria-hidden="true"></div>
            <div class="placeholder-rect mt-3" aria-hidden="true"></div>
          </div>
        </div>

      </div> <!-- END left column -->

      <!-- RIGHT column -->
      <div class="col-lg-8">

        <!-- Right Filters -->
        <div class="card page-card mb-3">
          <div class="card-body">
            <form id="rightFilters" class="row g-2 align-items-center"
                  role="search" aria-label="Right filters">

              <div class="col-auto col-md">
                <select id="pig-status" name="pig_status" class="form-select form-select-sm">
                  <option value="">Pig Status</option>
                </select>
              </div>

              <div class="col-auto col-md">
                <select id="phase" name="phase" class="form-select form-select-sm">
                  <option value="">Phase</option>
                </select>
              </div>

              <div class="col-auto col-md">
                <select id="type-of-pig" name="type_of_pig" class="form-select form-select-sm">
                  <option value="">Type of Pig</option>
                </select>
              </div>

              <div class="col-auto col-md">
                <select id="sex" name="sex" class="form-select form-select-sm">
                  <option value="">Sex</option>
                </select>
              </div>

              <div class="col-auto col-md">
                <input id="search-tag" name="search_tag" type="text"
                       class="form-control form-control-sm" placeholder="Search by tag number" />
              </div>

              <div class="col-auto">
                <button type="submit" class="btn btn-success btn-sm search-btn">Search</button>
              </div>

            </form>
          </div>
        </div>

        <!-- Table card -->
        <div class="card page-card">
          <div class="card-body p-0">
            <div class="custom-table-wrap table-responsive">

              <table class="table table-borderless mb-0">
                <caption class="visually-hidden">List of pigs</caption>

                <thead class="table-head">
                  <tr>
                    <th scope="col">YEAR</th>
                    <th scope="col">TYPE</th>
                    <th scope="col">TAG(ID)</th>
                    <th scope="col">SEX</th>
                    <th scope="col">COLOR</th>
                    <th scope="col">BIRTH DATE</th>
                    <th scope="col">AGE</th>
                    <th scope="col">PIG STATUS</th>
                    <th scope="col">CURRENT PHASE</th>
                    <th scope="col">ACTION</th>
                  </tr>
                </thead>

                <tbody>
                  <tr>
                    <td>2024</td>
                    <td>SOW</td>
                    <td>E-0021</td>
                    <td>F</td>
                    <td>BLK</td>
                    <td>11/15/24</td>
                    <td>0Y - 9M - 14D</td>
                    <td>ALIVE</td>
                    <td>LACTATING</td>
                    <td>
                      <button type="button" class="btn btn-outline-primary btn-sm">VIEW</button>
                      <button type="button" class="btn btn-success btn-sm ms-2">EDIT</button>
                    </td>
                  </tr>

                  <tr class="empty-row">
                    <td colspan="10" aria-hidden="true"></td>
                  </tr>
                </tbody>

              </table>

            </div>
          </div>
        </div>

      </div> <!-- END right column -->

    </div>
  </div>
</main>

<%- include("../partials/footer") %>
