<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<%- include("../partials/sidepanel") %>

<!-- Main content -->
<main class="main-content">
  <div class="container-fluid">

    <!-- Header card with tabs -->
    <%- include("../partials/pigmanagement_panel") %>

    <div class="card pig-card">
      <div class="card-body">

        <h4 class="mb-4 fw-bold">REGISTER A PIG</h4>

        <!-- ðŸ”´ REQUIRED: form ID for JS -->
        <form id="registerSwineForm">

        <!-- Farmer Identification -->
        <h6 class="section-title">Farmer Identification</h6>

        <div class="row g-3 mb-4">
          <div class="col-md-4">
            <label class="form-label">Farmer</label>
            <!-- JS needs farmerSelect -->
            <input type="text" class="form-control" id="farmerSelect" placeholder="Juan Dela Cruz">
          </div>

          <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-save w-100" type="button">Select</button>
          </div>

          <div class="col-md-3">
            <label class="form-label">Municipal</label>
            <select class="form-select">
              <option value="" selected disabled>Municipal</option>
              <option value="boac">Boac</option>
              <option value="gasan">Gasan</option>
              <option value="buenavista">Buenavista</option>
              <option value="torrijos">Torrijos</option>
              <option value="santa_cruz">Santa Cruz</option>
              <option value="mogpog">Mogpog</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label">Farm Size (mÂ²/ha)</label>
            <input type="text" class="form-control" placeholder="Farm Size">
          </div>

          <div class="col-md-3">
            <label class="form-label">Pen Count</label>
            <input type="number" class="form-control" placeholder="Pen Count">
          </div>

          <div class="col-md-3">
            <label class="form-label">Pig Count</label>
            <input type="number" class="form-control" placeholder="Pig Count">
          </div>
        </div>

        <!-- Physical Information -->
        <h6 class="section-title">Physical Information</h6>

        <div class="row g-3 mb-4">
          <div class="col-md-3">
            <label class="form-label">TAG (ID)</label>
            <input type="text" class="form-control" id="batch" value="E02129">
          </div>

          <div class="col-md-3">
            <label class="form-label">Breed</label>
            <select class="form-select" id="breed">
              <option value="" selected disabled>Select Breed</option>
              <option value="native">Native (Local)</option>
              <option value="large_white">Large White</option>
              <option value="landrace">Landrace</option>
              <option value="duroc">Duroc</option>
              <option value="pietrain">Pietrain</option>
              <option value="berkshire">Berkshire</option>
              <option value="crossbred">Crossbred</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label">Sex</label>
            <select class="form-select" id="sex">
              <option value="" selected disabled>Sex</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label">Color</label>
            <select class="form-select" id="color">
              <option value="" selected disabled>Select Color</option>
              <option value="black">Black</option>
              <option value="white">White</option>
              <option value="pink">Pink</option>
              <option value="brown">Brown</option>
              <option value="red">Red</option>
              <option value="black_white">Black & White</option>
              <option value="white_black">White with Black Spots</option>
              <option value="mixed">Mixed</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label">Weight (Kg)</label>
            <input type="number" class="form-control" placeholder="Weight">
          </div>

          <div class="col-md-3">
            <label class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="birth_date">
          </div>

          <div class="col-md-3">
            <label class="form-label">Purpose</label>
            <select class="form-select" id="purpose">
              <option value="" disabled selected>Select Purpose</option>
              <option value="fattening">Fattening</option>
              <option value="breeding">Breeding</option>
              <option value="slaughter">Slaughter</option>
              <option value="sale">For Sale</option>
              <option value="research">Research</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label">Current Status</label>
            <select class="form-select" id="status">
              <option value="alive" selected>Alive</option>
              <option value="sold">Sold</option>
              <option value="slaughtered">Slaughtered</option>
              <option value="dead">Dead</option>
              <option value="missing">Missing</option>
              <option value="quarantined">Quarantined</option>
            </select>
          </div>
        </div>

        <p id="swineMessage"></p>

        <!-- Actions -->
        <div class="d-flex justify-content-end gap-3">
          <button type="button" class="btn btn-clear px-4">CLEAR</button>
          <button type="submit" class="btn btn-save px-4">SAVE</button>
        </div>

        </form>

      </div>
    </div>

  </div>
</main>

<%- include("../partials/footer") %>
